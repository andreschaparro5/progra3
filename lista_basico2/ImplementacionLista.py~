from ListaEnlazada import ListaEnlazada
from EstudianteGestion import Estudiante
from flask import Flask,request,jsonify
from flask_cors import CORS

app = Flask(__name__)
CORS(app)
lista_estudiantes = ListaEnlazada()

@app.route('/mensaje',methods=['GET'])
def mensaje():
    return jsonify({'mensaje': 'Listas Enlazadas'})

@app.route('/agregarAlInicio', methods=['POTS'])
def agregarAlInicio():
    datos = request.get_json()
    nombre = datos.get('nombre')
    edad = datos.get('edad')
    identificacion = datos.get('identificacion')
    nuevoEstudiante = Estudiante(nombre,edad,identificaion)
    lista_estudiante.agregar_al_frente(nuevoEstudiante)
    return jsonify({'mensaje': 'Estudiante agregado correctamente'})

@app.route('/listaEnlazada', methods=['GET'])
def mostrarListaEnlazada():
    return lista_estudiantes.imprimir_lista__objetos()

if __name__ == '__main__':
    app.run(debug=True)
